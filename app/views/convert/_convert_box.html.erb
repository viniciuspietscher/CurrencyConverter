<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header text-center'>
      Simule sua convers√£o
    </div>

    <div class='card-block'>
      <%= form_tag('/convert', method: :get, id: 'convert_form') do %>
        <div class='local_currency'>
          <div class='form-group'>
            <p class='title'>From:</p>
            <%= select_tag 'source_currency', options_for_select(country_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
          </div>

          <div class='form-group'>
            <input type='number' name='amount' id='amount' class='form-control' placeholder='Amount' step='any' required>
          </div>
        </div>

        <div class='desired_currency'>
          <div class='form-group'>
            <p class='title'>To:</p>
            <%= select_tag 'desired_currency', options_for_select(country_list, 'EUR'), class: 'form-control', id: 'desired_currency'%>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' placeholder='Result' readonly>
          </div>
        </div>
        <div>
          <button type='submit' class='btn btn-primary btn-exchange col-md-12'>Convert</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
